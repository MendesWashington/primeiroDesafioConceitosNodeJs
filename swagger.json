  "paths": {
    "/users": {
      "post": {
        "tags":["Users"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Washington",
                  "username": "mendesswashington"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "username already exists"
          }
        }
      }
    }
  }
}
